
{% extends "base.html.twig" %}

{% block page %} Works {% endblock %}

{% block header %} {{ Works }} {% endblock %}
{% block content %}
<h2>Projects :</h2>
<div class="row">
    {% for project in projects %}
    <div class="project-cards">
        <img src="{{ project.image }}" alt="{{ project.name }} Screenshot"></img>
        <div class="project-cards-content">
            <h3>{{ project.name }}</h3>
            <p>{{ project.description }}</p>
        </div>
    </div>
    {% endfor %}
</div> 

{% endblock %}  